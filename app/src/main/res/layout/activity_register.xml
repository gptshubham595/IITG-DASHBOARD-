<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/k"
    tools:context="iitg.shubham.myapplication.Register">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/iit" />

    <EditText
        android:id="@+id/name"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/shape3"
        android:layout_centerHorizontal="true"
        android:hint="   Name"
        android:inputType="textCapCharacters|textCapWords|textCapSentences|textPersonName"
        android:padding="8dp"
        android:textColor="@color/colorTextPrimary"
        android:textSize="30dp"
        android:textStyle="normal|italic"
        android:typeface="serif" />

    <EditText
        android:id="@+id/email"
        android:textColor="@color/colorTextPrimary"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="272dp"
        android:background="@drawable/shape3"
        android:hint="  Email"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textSize="30dp"
        android:textStyle="normal|italic"
        android:typeface="serif" />
    <EditText
        android:textColor="@color/colorTextPrimary"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:background="@drawable/shape3"
        android:layout_marginTop="338dp"
        android:typeface="serif"
        android:hint="  Password"
        android:textSize="35dp"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:id="@+id/pass"
        android:padding="5dp"
        android:textStyle="normal|italic"
        />
    <EditText
        android:id="@+id/roll"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="396dp"
        android:background="@drawable/shape3"
        android:hint="   IITG Roll No."
        android:inputType="phone"
        android:padding="8dp"
        android:textColor="@color/colorTextPrimary"
        android:textSize="30dp"
        android:textStyle="normal|italic"
        android:typeface="serif" />
    <Button
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:background="@drawable/shape2"
        android:text="Create Account"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:typeface="serif"
        android:layout_marginTop="454dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/create"
        android:padding="5dp"
        android:textStyle="normal|italic"
        />
</RelativeLayout>
